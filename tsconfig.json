{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "isolatedModules": true,
    "paths": {
      "@eduardorothdev/rxjs-mqtt/parsers": ["parsers/index.ts"],
      "@eduardorothdev/rxjs-mqtt/types": ["types/index.ts"]
    }
  },
  "include": ["src/"],
  "exclude": ["!src/"]
}
